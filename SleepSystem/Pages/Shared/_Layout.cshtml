<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SleepSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SleepSystem.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css" integrity="sha512-GYk26rE8nLZfWlD0WqYBz6F1H62hE+8rxzVepZhy+o83oh63+og+pr8VRsV+7tLQ9G05W4XxOUssA8HV0s1d5w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnH/PR+2V8ZyTzbzRyYxZY4IY/EBdEj6u3Qg3s5HUl5rJefHDLS+z/0TwIwH+1Q9w2O4E2bZg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg" style="background: linear-gradient(90deg, #2b5876, #4e4376);">
            <div class="container">
                <a class="navbar-brand text-white fw-bold" href="/">
                    <i class="fas fa-moon me-2"></i> Sleep System
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link text-white" aria-current="page" href="/">Inicio</a>
                        </li>
                    </ul>
                    <!-- Botón destacado "Empezar" -->
                    <a class="btn btn-info btn-lg ms-3" href="/Login_">Empezar</a>
                </div>
            </div>
        </nav>
    </header>

    <div class="container my-4">
        @RenderBody()
    </div>
    
    <!-- AOS JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js" integrity="sha512-BJeoXijbPnlrWCHZsKtn/q2wHxD7UZn2rjg+5ihx/1XfBYAm1KwqNwxVQDJclX/9NzTnNmoHVN4YtC1P+Cx5gQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script>
        AOS.init({
          duration: 1000,
          once: true
        });
    </script>

    <footer class="bg-light text-center p-3 mt-5">
        © @DateTime.Now.Year - SleepSystem
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>